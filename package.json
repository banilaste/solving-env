{
	"name": "solvenv",
	"displayName": "SolvEnv",
	"description": "Solving environment for competitive programming",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:solvenv.sessions",
		"onView:solvenv.problems",
		"onCommand:solvenv.new_session"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "solvenv",
					"title": "SolvEnv",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"solvenv": [
				{
					"id": "solvenv.sessions",
					"name": "Sessions"
				},
				{
					"id": "solvenv.problems",
					"name": "Problems"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "solvenv.sessions",
				"contents": "No session found\n[Create Session](command:solvenv.new_session)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "solvenv.new_session",
					"when": "view == solvenv.sessions",
					"group": "navigation"
				},
				{
					"command": "solvenv.new_problem",
					"when": "view == solvenv.problems",
					"group": "navigation"
				},
				{
					"command": "solvenv.helloWorld",
					"when": "true"
				}
			],
			"view/item/context": [
				{
					"command": "solvenv.helloWorld",
					"when": "true",
					"group": "inline"
				},
				{
					"command": "solvenv.open_session",
					"when": "view == solvenv.sessions",
					"group": "inline"
				},
				{
					"command": "solvenv.helloWorld",
					"when": "true"
				}
			]
		},
		"commands": [
			{
				"command": "solvenv.helloWorld",
				"title": "Hello World",
				"icon": {
					"light": "resources/light/done_all-black-18dp.svg",
					"dark": "resources/dark/done_all-white-18dp.svg"
				}
			},
			{
				"command": "solvenv.new_session",
				"title": "Create new session",
				"icon": {
					"light": "resources/light/add_session-black-18dp.svg",
					"dark": "resources/dark/add_session-white-18dp.svg"
				}
			},
			{
				"command": "solvenv.open_session",
				"title": "Open session",
				"icon": {
					"light": "resources/light/launch_session-black.svg",
					"dark": "resources/dark/launch_session-white.svg"
				}
			},
			{
				"command": "solvenv.new_problem",
				"title": "Add new problem",
				"icon": {
					"light": "resources/light/add-black.svg",
					"dark": "resources/dark/add-white.svg"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.2.13",
		"@types/clear": "^0.1.0",
		"@types/figlet": "^1.2.0",
		"@types/fs-extra": "^9.0.2",
		"@types/glob": "^7.1.3",
		"@types/inquirer": "^6.5.0",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/unzipper": "^0.10.3",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"chai": "^4.2.0",
		"chalk": "^3.0.0",
		"clear": "^0.1.0",
		"clui": "^0.3.6",
		"eslint": "^7.9.0",
		"figlet": "^1.3.0",
		"fs-extra": "^9.0.1",
		"glob": "^7.1.6",
		"inquirer": "^7.1.0",
		"lodash": "^4.17.15",
		"minimist": "^1.2.5",
		"mocha": "^8.1.3",
		"touch": "^3.1.0",
		"typescript": "^4.0.2",
		"unzipper": "^0.10.10",
		"vscode-test": "^1.4.0"
	}
}
